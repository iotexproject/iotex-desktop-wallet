{
  "name": "ioPay",
  "version": "0.6.1",
  "description": "IoTeX Wallet App",
  "main": "dist/app/main.js",
  "scripts": {
    "start": "electron src/main.js",
    "start:dev": "export NODE_ENV=development && npm start",
    "build": "npm run build:js && npm run build:electron",
    "build:js": "NODE_OPTIONS=\"--max-old-space-size=20148\" NODE_ENV=production webpack --config ./webpack.app.config.js",
    "build:electron": "electron-builder -mwl",
    "publish": "electron-builder --mac --win --linux -p always",
    "lint": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:iotexproject/iotex-explorer.git"
  },
  "build": {
    "appId": "io.iotex.wallet",
    "files": [
      "dist/app/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "iotexproject",
        "repo": "iotex-explorer"
      }
    ]
  },
  "author": "Tian Pan (https://tianpan.co)",
  "license": "Apache",
  "devDependencies": {
    "copy-webpack-plugin": "5.0.3",
    "electron": "5.0.3",
    "electron-builder": "21.0.10",
    "electron-devtools-installer": "^2.2.4",
    "eslint": "5.16.0",
    "eslint-plugin-import": "2.18.1",
    "friendly-errors-webpack-plugin": "1.7.0",
    "raw-loader": "3.0.0",
    "webpack": "4.35.3",
    "webpack-merge": "4.2.1",
    "webpack-node-externals": "1.7.2",
    "yaml-js": "0.2.3"
  },
  "dependencies": {
    "@ledgerhq/hw-transport-node-hid": "^4.64.0",
    "config": "^3.1.0",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^3.0.5",
    "electron-updater": "^4.0.6",
    "fs": "0.0.1-security",
    "global": "4.4.0",
    "ipc": "0.0.1",
    "isomorphic-unfetch": "^3.0.0",
    "pem": "1.14.2",
    "query-string": "^6.5.0",
    "solc": "^0.5.8",
    "ws": "^7.1.0"
  }
}
