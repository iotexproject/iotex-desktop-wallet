{
  "name": "ioPay",
  "version": "0.10.1",
  "description": "IoTeX Wallet App",
  "main": "dist/app/main.js",
  "scripts": {
    "start": "electron src/main.js",
    "start:dev": "export NODE_ENV=development && npm start",
    "build": "npm run build:js && npm run build:electron # please specify APPLEID APPLEIDPASS",
    "build:js": "NODE_OPTIONS=\"--max-old-space-size=20148\" NODE_ENV=production webpack --config ./webpack.app.config.js",
    "build:electron": "electron-builder -mwl",
    "publish": "electron-builder --mac --win --linux -p always # please specify APPLEID APPLEIDPASS",
    "lint": "eslint . --fix",
    "postinstall": "electron-rebuild"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:iotexproject/iotex-explorer.git"
  },
  "build": {
    "appId": "io.iotex.wallet",
    "asar": true,
    "files": [
      "dist/app/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "iotexproject",
        "repo": "iotex-explorer"
      }
    ],
    "mac": {
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "src/entitlements.mac.plist",
      "entitlementsInherit": "src/entitlements.mac.plist"
    },
    "afterSign": "src/notarize.js",
    "dmg": {
      "sign": false
    }
  },
  "author": "IoTeX Foundation",
  "license": "Apache",
  "devDependencies": {
    "copy-webpack-plugin": "5.0.3",
    "electron": "8.0.0",
    "electron-builder": "22.7.0",
    "electron-devtools-installer": "3.1.1",
    "electron-notarize": "1.0.0",
    "electron-rebuild": "^1.11.0",
    "eslint": "5.16.0",
    "eslint-plugin-import": "2.18.1",
    "friendly-errors-webpack-plugin": "1.7.0",
    "raw-loader": "3.0.0",
    "webpack": "4.41.0",
    "webpack-merge": "4.2.1",
    "webpack-node-externals": "1.7.2",
    "yaml-js": "0.2.3"
  },
  "dependencies": {
    "@ledgerhq/hw-transport-node-hid": "5.13.1",
    "config": "^3.1.0",
    "electron-is-dev": "^1.1.0",
    "electron-log": "4.2.2",
    "electron-root-path": "^1.0.16",
    "electron-updater": "^4.0.6",
    "fs": "0.0.1-security",
    "global": "4.4.0",
    "ipc": "0.0.1",
    "isomorphic-unfetch": "^3.0.0",
    "pem": "1.14.4",
    "promise-timeout": "^1.3.0",
    "query-string": "^6.5.0",
    "solc": "^0.5.8",
    "universal-analytics": "^0.4.20",
    "uuid": "^3.3.3",
    "ws": "^7.1.0"
  }
}
